{
  "name": "hikma-engine",
  "version": "1.0.0",
  "description": "Code Knowledge Graph Indexer - A sophisticated TypeScript-based indexer that transforms Git repositories into multi-dimensional knowledge stores for AI agents",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "api": "ts-node src/api/index.ts",
    "api:dev": "ts-node src/api/index.ts",
    "search": "ts-node src/cli/search.ts",
    "build": "tsc",
    "dev": "ts-node --watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:performance": "jest --config jest.performance.config.js",
    "test:system": "jest --config jest.system.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist data/*.db data/lancedb",
    "api:start": "node dist/api/server.js",
    "api:build": "tsc && npm run api:docs:generate",
    "api:test": "jest src/api",
    "api:test:integration": "jest src/api/tests/integration",
    "api:test:performance": "jest src/api/tests/performance",
    "api:docs:generate": "ts-node src/api/docs/generate-docs.ts",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh production",
    "performance:test": "./scripts/performance-test.sh",
    "production:check": "./scripts/production-readiness.sh",
    "docker:build": "docker build -f Dockerfile.api -t hikma-api .",
    "docker:run": "docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:stop": "docker-compose down",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/"
  },
  "keywords": [
    "code-analysis",
    "knowledge-graph",
    "ast-parsing",
    "git-analysis",
    "vector-embeddings",
    "ai-indexing",
    "typescript",
    "polyglot-persistence"
  ],
  "author": "hikma-engine contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/glob": "^8.1.0",
    "@types/gremlin": "^3.6.7",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.2",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.11.0",
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "glob": "^10.4.1",
    "gremlin": "^3.7.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.1",
    "simple-git": "^3.27.0",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
