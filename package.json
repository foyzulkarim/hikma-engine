{
  "name": "hikma-engine",
  "version": "3.0.0",
  "description": "Code Knowledge Graph Indexer - A sophisticated TypeScript-based indexer that transforms Git repositories into multi-dimensional knowledge stores for AI agents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hikma-engine": "dist/cli/main.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "src/python/",
    "scripts/setup-python.js",
    "extensions/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foyzulkarim/hikma-engine.git"
  },
  "homepage": "https://github.com/foyzulkarim/hikma-engine#readme",
  "bugs": {
    "url": "https://github.com/foyzulkarim/hikma-engine/issues"
  },
  "scripts": {
    "embed": "node dist/cli/main.js embed",
    "index": "npm run embed",
    "search": "node dist/cli/main.js search",
    "rag": "node dist/cli/main.js rag",
    "build": "tsc",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "clean": "rm -rf dist data/*.db",
    "setup-python": "node scripts/setup-python.js",
    "postinstall": "node -e \"console.log('\\n🐍 For Python-based features (embeddings, RAG), run: npm run setup-python\\n');\""
  },
  "keywords": [
    "code-analysis",
    "knowledge-graph",
    "ast-parsing",
    "git-analysis",
    "vector-embeddings",
    "ai-indexing",
    "typescript",
    "polyglot-persistence"
  ],
  "author": "foyzulkarim",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.2",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "glob": "^10.4.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "simple-git": "^3.27.0",
    "sqlite-vec": "^0.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.4.5",
    "uuid": "^11.1.0",
    "zod": "^4.0.5"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "volta": {
    "node": "20.19.4"
  }
}
